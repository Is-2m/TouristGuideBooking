    <style name="customRoundCorners50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="customRoundRightSide10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="customRoundRightSide50" parent="">
        <item name="cornerFamily">rounded</item>
